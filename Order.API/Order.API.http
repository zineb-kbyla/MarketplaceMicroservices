@Order.API_HostAddress = https://localhost:7002

### Get all orders
GET {{Order.API_HostAddress}}/api/orders

### Get orders by user ID
GET {{Order.API_HostAddress}}/api/orders?userId=user123

### Get specific order
GET {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345

### Get user orders
GET {{Order.API_HostAddress}}/api/orders/user/user123

### Create new order
POST {{Order.API_HostAddress}}/api/orders
Content-Type: application/json

{
  "userId": "user123",
  "userName": "John Doe",
  "items": [
    {
      "productId": "prod001",
      "productName": "iPhone 15 Pro",
      "quantity": 1,
      "unitPrice": 999.99,
      "totalPrice": 999.99
    },
    {
      "productId": "prod002",
      "productName": "AirPods Pro",
      "quantity": 2,
      "unitPrice": 299.99,
      "totalPrice": 599.98
    }
  ],
  "shippingAddress": {
    "street": "123 Main St",
    "city": "New York",
    "state": "NY",
    "country": "USA",
    "zipCode": "10001",
    "phoneNumber": "+1234567890"
  },
  "paymentInfo": {
    "cardName": "John Doe",
    "cardNumber": "4532123456789012",
    "expiration": "12/26",
    "cvv": "123",
    "paymentMethod": "CreditCard"
  }
}

### Update order status
PUT {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345/status
Content-Type: application/json

{
  "status": "Confirmed"
}

### Update order status to Processing
PUT {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345/status
Content-Type: application/json

{
  "status": "Processing"
}

### Update order status to Shipped
PUT {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345/status
Content-Type: application/json

{
  "status": "Shipped"
}

### Update order status to Delivered
PUT {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345/status
Content-Type: application/json

{
  "status": "Delivered"
}

### Cancel order
DELETE {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345

### Get order tracking
GET {{Order.API_HostAddress}}/api/orders/65b1234567890abcdef12345/tracking
