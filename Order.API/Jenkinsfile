pipeline {
    agent any

    options {
        timeout(time: 30, unit: 'MINUTES')
        timestamps()
    }

    environment {
        DOTNET_CLI_HOME = "${WORKSPACE}/.dotnet"
        DOTNET_SKIP_FIRST_TIME_EXPERIENCE = true
        SERVICE_NAME = 'Order.API'
        DOCKER_IMAGE_NAME = 'order-service'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Checking out code from GitHub...'
                git branch: 'master',
                    url: 'https://github.com/zineb-kbyla/MarketplaceMicroservices.git'
            }
        }

        stage('Restore Dependencies') {
            steps {
                echo 'Restoring NuGet packages for Order.API...'
                bat "dotnet restore ${SERVICE_NAME}/${SERVICE_NAME}.csproj"
            }
        }

        stage('Build') {
            steps {
                echo 'Building Order.API...'
                bat "dotnet build ${SERVICE_NAME}/${SERVICE_NAME}.csproj --no-restore --configuration Release"
            }
        }

        stage('Run Unit Tests') {
            steps {
                echo 'Running unit tests for Order.API...'
                bat "dotnet test ${SERVICE_NAME}/${SERVICE_NAME}.csproj --no-build --configuration Release --logger=\"trx;LogFileName=order-test-results.trx\""
            }

            post {
                always {
                    junit allowEmptyResults: true, testResults: '**/order-test-results.trx'
                }
            }
        }

        stage('Code Quality Analysis') {
            steps {
                echo 'Running code quality checks...'
                // Optionnel: SonarQube, Code Coverage
                bat "dotnet test ${SERVICE_NAME}/${SERVICE_NAME}.csproj --no-build --configuration Release --collect:\"XPlat Code Coverage\""
            }
        }

        stage('Publish Artifacts') {
            steps {
                echo 'Publishing Order.API artifacts...'
                bat "dotnet publish ${SERVICE_NAME}/${SERVICE_NAME}.csproj --no-build --configuration Release --output ./publish/order-api"
            }

            post {
                success {
                    archiveArtifacts artifacts: 'publish/order-api/**', fingerprint: true
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image for Order.API...'
                bat "docker build -f ${SERVICE_NAME}/Dockerfile -t ${DOCKER_IMAGE_NAME}:%BUILD_NUMBER% ."
                bat "docker tag ${DOCKER_IMAGE_NAME}:%BUILD_NUMBER% ${DOCKER_IMAGE_NAME}:latest"
            }

            post {
                success {
                    echo "Docker image ${DOCKER_IMAGE_NAME}:${BUILD_NUMBER} built successfully"
                }
            }
        }

        stage('Push Docker Image') {
            when {
                branch 'master'
            }
            steps {
                echo 'Pushing Docker image to registry...'
                // Décommentez si vous utilisez un registry
                // bat "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                // bat "docker push ${DOCKER_IMAGE_NAME}:%BUILD_NUMBER%"
                // bat "docker push ${DOCKER_IMAGE_NAME}:latest"
                echo 'Skipping push - configure Docker registry credentials'
            }
        }

        stage('Deploy to Staging') {
            when {
                branch 'master'
            }
            steps {
                echo 'Deploying Order.API to staging environment...'
                bat 'docker-compose up -d order-api'
            }
        }

        stage('Health Check') {
            steps {
                echo 'Performing health check on Order.API...'
                script {
                    retry(3) {
                        sleep 10
                        bat 'curl -f http://localhost:5002/api/orders || exit 1'
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed for Order.API'
            // Nettoyer le workspace
            cleanWs()
        }

        success {
            echo '✅ Order.API Pipeline succeeded!'
            // Optionnel: Notifications Slack/Email
            // slackSend color: 'good', message: "Order.API Build #${BUILD_NUMBER} succeeded"
        }

        failure {
            echo '❌ Order.API Pipeline failed!'
            // Optionnel: Notifications Slack/Email
            // slackSend color: 'danger', message: "Order.API Build #${BUILD_NUMBER} failed"
        }

        unstable {
            echo '⚠️ Order.API Pipeline unstable'
        }
    }
}
