{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "productRoute": {
        "ClusterId": "productCluster",
        "Match": {
          "Path": "/api/products/{**catch-all}",
          "Methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        },
        "Timeout": "00:00:30"
      },
      "orderRoute": {
        "ClusterId": "orderCluster",
        "Match": {
          "Path": "/api/orders/{**catch-all}",
          "Methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        },
        "Timeout": "00:00:30"
      },
      "recommendationRoute": {
        "ClusterId": "recommendationCluster",
        "Match": {
          "Path": "/api/recommendations/{**catch-all}",
          "Methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
        },
        "Timeout": "00:00:30"
      }
    },
    "Clusters": {
      "productCluster": {
        "Destinations": {
          "productService": {
            "Address": "http://product-api:5001"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": false
          }
        }
      },
      "orderCluster": {
        "Destinations": {
          "orderService": {
            "Address": "http://order-api:5002"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": false
          }
        }
      },
      "recommendationCluster": {
        "Destinations": {
          "recommendationService": {
            "Address": "http://recommendation-api:8004"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": false
          }
        }
      }
    }
  }
}
